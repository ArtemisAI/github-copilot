{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Make script executable",
      "type": "shell",
      "command": "chmod",
      "args": ["+x", "tunnel-manager.sh"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Start tunnel",
      "type": "shell",
      "command": "./tunnel-manager.sh",
      "args": ["start"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Start tunnel with name",
      "type": "shell",
      "command": "./tunnel-manager.sh",
      "args": ["start", "${input:tunnelName}"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Stop tunnel",
      "type": "shell",
      "command": "./tunnel-manager.sh",
      "args": ["stop"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Check logs",
      "type": "shell",
      "command": "tail",
      "args": ["-f", "vscode-server.log"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      },
      "isBackground": true
    },
    {
      "label": "View logs",
      "type": "shell",
      "command": "cat",
      "args": ["vscode-server.log"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ],
  "inputs": [
    {
      "id": "tunnelName",
      "description": "Enter tunnel name",
      "default": "my-tunnel",
      "type": "promptString"
    }
  ]
}